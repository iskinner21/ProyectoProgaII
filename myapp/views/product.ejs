<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/header') %>
	<!-- /Header -->
	
	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%= productos.product_name %></h2> 
			<p class="product-detail-description">
				<a href="/products/productAdd">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src='<%= productos.product_img %>' alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= productos.product_description %>
					</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for (let i=0 ; i< productos.comments.length ; i++) { %>
						<article>
							<img src='/images/users/FotoDePerfil.png' alt="">
							<div class="data">
								<p class="user">
								 <strong> <a href="/users/profile"><%= productos.comments[i].nombre %></a> </strong> 
								<%= productos.comments[i].texto_comentario %></p>
							</div>
						</article>
						<% } %>
						

					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>
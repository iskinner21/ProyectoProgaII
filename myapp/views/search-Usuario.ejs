<!-- Include Head -->

<%- include('./partials/head') %>


	<!-- Header -->
	<% if(locals.UserName){ %>
		<%- include('./partials/headerLogueado')%>
	<% } else{ %>
		<%- include('./partials/header')%>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<% if (usuarios.length>0) {%>
				<% for (let i=0; i < usuarios.length; i++) { %>

					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/users/profile/<%= usuarios[i].id %>">
								<figure class="product-box_image">
									<img src= "<%= usuarios[i].img %>" >
								</figure>
								<article class="product-box_data">
									<h2><%= usuarios[i].username %></h2>
									<p><%= usuarios[i].firstname %>  <%= usuarios[i].lastname %></p>
									<p><%= usuarios[i].email %></p>
								</article>
							</a>
						</section>
					</div>
					<% } %>
			<% } else {%>
				<h2>No hay resultados para su criterio de búsqueda.</h2>
			<% } %>
			
			<!-- Show the "ultimos" products -->
			


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
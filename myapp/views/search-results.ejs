
<!-- Include Head -->

<%- include('./partials/head') %>


	<!-- Header -->
<% if(locals.UserName){ %>
	
	<%- include('./partials/headerLogueado') %>
	<% } else{ %>
		<%- include('./partials/header')%>
		<% } %>	
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de búsqueda</h2>
			</div>
			<% if (producto.length>0) {%>
				<% for (let i=0; i < producto.length; i++) { %>

					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/detalle/<%= producto[i].id %>">
								<figure class="product-box_image">
									<img src= "<%= producto[i].productImg %>" >
								</figure>
								<article class="product-box_data">
									<h2><%= producto[i].productName %></h2>
									<p><%= producto[i].productDescription %> </p>
									<p>Comentarios del producto: <%= producto[i].comentario.length %></p>
									<p>Creado por: <a href="/users/profile/<%= producto[i].usuario.id %>"><%= producto[i].usuario.username %></a></p>
								</article>
							</a>
						</section>
					</div>
					<% } %>
			<% } else {%>
				<h2>No hay resultados para su criterio de búsqueda.</h2>
			<% } %>
			
			<!-- Show the "ultimos" products -->
		


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->



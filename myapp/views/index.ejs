<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	
	<!-- Header -->
	<% if(locals.UserName){ %>
		<%- include('./partials/headerLogueado')%>
	<% } else{ %>
		<%- include('./partials/header')%>
	<% } %>
	
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner_principal.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">RECIENTES</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
		    <% for (let i=0; i<Producto.length; i++) { %>

				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detalle/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src= "<%= producto[i].productImg %>"  >
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].productName %></h2>
								<p><%= productos[i].productDescription %> </p>
								<p>Comentarios del producto: <%= producto[i].comentario.length  %></p>
								<p>Creado por: <a href="/users/profile/<%= producto[i].usuario.id %>"><%= producto[i].usuario.username %></a></p>
							</article>
						</a>
					</section>
				</div>
				<% } %>
			



        
			
			
			
			
	<!-- /Novedades -->
	<!-- Más comentados -->
	<!-- /Más comentados -->


	<!-- footer -->

	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>